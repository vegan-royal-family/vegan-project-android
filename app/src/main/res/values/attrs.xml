        <attr name="text" format="reference|string" />
        <attr name="colorClass" format="enum">
            <enum name="primary" value="1"/>
            <enum name="secondary" value="2"/>
        </attr>
        <attr name="android:background" format="integer" />
        <attr name="setLeftIcon" format="integer" />
        <attr name="setRightIcon" format="integer" />
        <attr name="status" format="enum">
            <enum name="state_enabled" value="1"/>
            <enum name="state_disabled" value="0"/>
            <enum name="state_loading" value="-1"/>
        </attr>
        <attr name="android:enabled" format="boolean"/>
    </declare-styleable>

