<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- UNSELECTED -->
    <item android:state_checked="false">
        <layer-list>
            <item
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape android:shape="oval">
                    <size android:width="22dp" android:height="22dp" />
                    <stroke android:width="1dp" android:color="@color/gray_500" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- SELECTED -->
    <item android:state_checked="true">
        <layer-list>
            <item
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape android:shape="oval">
                    <size android:width="22dp" android:height="22dp" />
                    <stroke android:width="6dp" android:color="@color/primary_500" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <!--            <item android:drawable="@drawable/radio_bg" android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp" />-->
        </layer-list>
    </item>
</selector>